<language-addon>
    <addon-name>columnchooser</addon-name>
  	<version>
		<version-class>org.zkoss.addon.columnchooser.Version</version-class>
		<version-uid>0.0.1-SNAPSHOT</version-uid>
		<zk-version>6.5.0</zk-version><!-- or later -->
	</version>
    
	<language-name>xul/html</language-name>
	<component>
		<component-name>columnchooser</component-name> <!-- required -->
		<component-class>org.zkoss.addon.columnchooser.Columnchooser</component-class> <!-- required -->
		<extends>popup</extends>
		<annotation>
			<annotation-name>ZKBIND</annotation-name>
			<property-name>visibleColumns</property-name>
			<attribute>
				<attribute-name>ACCESS</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>SAVE_EVENT</attribute-name>
				<attribute-value>onColumnVisibilityChange</attribute-value>
			</attribute>
		</annotation>
		<annotation>
			<annotation-name>ZKBIND</annotation-name>
			<property-name>hiddenColumns</property-name>
			<attribute>
				<attribute-name>ACCESS</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>SAVE_EVENT</attribute-name>
				<attribute-value>onColumnVisibilityChange</attribute-value>
			</attribute>
		</annotation>
	</component>
</language-addon>